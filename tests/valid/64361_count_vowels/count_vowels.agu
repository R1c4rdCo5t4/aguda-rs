let count_vowels (str, length) : (String[], Int) -> Int =
    let count : Int = 0;
    let i : Int = 0;
    while i < length do (
        let ch : String = str[i];
        if ch == "a" || ch == "e" || ch == "i" || ch == "o" || ch == "u" then (
            set count = count + 1
        );
        set i = i + 1
    );
    count

let _ : Unit =
    let word : String = "hello";
    print(count_vowels(word, 5));  -- Should print 2

    let sentence : String = "compiling is fun";
    print(count_vowels(sentence, 18))  -- Should print 5