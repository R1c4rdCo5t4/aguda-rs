-- Conta quantos nÃºmeros pares existem num array

let countEven (a) : Int[] -> Int =
    let i : Int = 0;
    let count : Int = 0;
    while i < length(a) do (
        if a[i] % 2 == 0 then set count = count + 1;
        set i = i + 1
    );
    count

let _ : Unit = print(countEven(new Int[] [6 | 14 ; 2 ; 10 ; 33 ; 88 ; 1]))