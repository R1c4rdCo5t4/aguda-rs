let palindrome (n: String[]) -> Bool =
    let i : Int = 0;
    let j : Int = length(n) - 1;
    let result : Bool = true;
    while i < j do (
        if n[i] != n[j] then set result = false;
        set i = i + 1;
        set j = j - 1
    );
    result

