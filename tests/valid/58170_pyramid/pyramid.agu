let printPyramid (rows) : Int -> Unit =
  let i : Int = 1;
  
  while i <= rows do (
    let j : Int = 1;
    
    let space : Int = rows - i;
    while space > 0 do (
      print(" ");
      set space = space - 1
    );

    while j <= 2 * i - 1 do (
      print("*");
      set j = j + 1
    );
    
    print("\n");
    set i = i + 1
  )

let _ : Unit =
  print("Pyramid with 3 rows:\n");
  printPyramid(3);
  
  print("\nPyramid with 5 rows:\n");
  printPyramid(5);
  
  print("\nPyramid with 7 rows:\n");
  printPyramid(7)