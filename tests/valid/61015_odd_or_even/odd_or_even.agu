let evenOddDesc (n : Int) : Int -> String =
  if n % 2 == 0 then "Even" else "Odd";

let i : Int = 1;
let evenSum : Int = 0;
let oddSum : Int = 0;
let evenCount : Int = 0;
let oddCount : Int = 0;

while i <= 10 do (
  print("Num: "); print(i); print(" "); print(evenOddDesc(i)); print("\n");
  if i % 2 == 0 then (
    set evenSum = evenSum + i;
    set evenCount = evenCount + 1
  ) else (
    set oddSum = oddSum + i;
    set oddCount = oddCount + 1
  );
  set i = i + 1
);

if evenCount > 0 then (
  let evenAvg : Int = evenSum / evenCount;
  print("Even avg: "); print(evenAvg); print("\n")
);

if oddCount > 0 then (
  let oddAvg : Int = oddSum / oddCount;
  print("Odd avg: "); print(oddAvg); print("\n")
);

print("Even sum: "); print(evenSum); print(" Odd sum: "); print(oddSum); print("\n");