-- Function to calculate the sum of positive numbers, the sum of negative numbers, 
-- and return the difference between the positive and negative sums.
let positive_negative_sum_difference (lst : Int[]) : Int =
    let positive_sum : Int = 0
    let negative_sum : Int = 0
    let count : Int = 0

    -- Loop through the list to calculate the sums of positive and negative numbers
    while count < length(lst) do
        if lst[count] > 0 then
            set positive_sum = positive_sum + lst[count]  -- Sum positive numbers
        else if lst[count] < 0 then
            set negative_sum = negative_sum + lst[count]  -- Sum negative numbers
        set count = count + 1
    

    positive_sum + negative_sum

let numbers : Int[] = [5, -3, 9, -1, 4, -7, 6]

let _ : Unit = 
    print(positive_negative_sum_difference(numbers))  -- Expected result: 13
