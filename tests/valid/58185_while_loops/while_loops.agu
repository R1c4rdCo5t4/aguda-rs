-- Test of nested while loops

let printPattern (n) : Int -> Unit =
    let i : Int = 0 ;
    while i < n do (
        let j : Int = 0 ;
        while j <= i do (
            print("* ") ;
            set j = j + 1
        ) ;
        print("\n") ;
        set i = i + 1
    )

let main : Unit = printPattern(5)