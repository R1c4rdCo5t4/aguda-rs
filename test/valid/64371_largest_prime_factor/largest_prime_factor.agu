-- Project Euler: Largest Prime Factor
-- https://projecteuler.net/problem=3

let isPrime(n: Int): Bool =
    let i: Int = 2;
    let result: Bool = true;
    let continue: Bool = true;
    while i * i <= n && continue do ( -- minimum number of iterations 
        if n % i == 0 then ( -- n is divisible by i
            set result = false;
            set continue = false -- break
        );
        set i = i + 1
    );
    result

let main: Unit =
    let n: Int = 600851475143;
    let largest: Int = 0;
    let i: Int = 2;
    while i <= n do (
        if n % i == 0 && isPrime(i) then -- prime factor
            set largest = i;
        set i = i + 1
    );
    print(largest) -- 6857
